<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Appointments</title>
  <link rel="stylesheet" href="/stylesheets/appointments.css">
</head>
<body>
  <% layout("/layouts/boilerplate") %>
  <br>
  <div class="container">
    <h1>Your Appointments</h1>
    <% if (appointments.length === 0) { %>
      <p>You have no upcoming appointments.</p>
    <% } else { %>
      <% for(let appointment of appointments) { %>
        <div class="card">
          <h2><%= appointment.doctor.name %></h2>
          <p><strong>Date:</strong> <%= appointment.date.toDateString() %></p>
          <p><strong>Time:</strong> <%= appointment.time %></p>
          <p><strong>Status:</strong> <%= appointment.status %></p>

          <form action="/cancel-appointment/<%= appointment._id %>" method="POST">
            <input type="hidden" name="email" value="<%= appointment.email %>">
            <button type="submit" class="cancel-btn">Cancel Appointment</button>
          </form>
        </div>
      <% } %>
    <% } %>
  </div>
  <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
</body>
</html>
